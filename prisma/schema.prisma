generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider          = "mysql"
    url               = env("DATABASE_URL")
    shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model User {
    id        String   @id @default(cuid())
    name      String?
    email     String   @unique
    password  String
    role      Role     @default(USER)
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

model Server {
    id          String   @id @default(cuid())
    name        String
    image       String
    description String
    detaylar    String
    launchDate  DateTime @default(now())
    vip         String
    createdAt   DateTime @default(now())
    updatedAt   DateTime @updatedAt
    serverType  String
    Rank        String   @default("0")
    slug        String   @unique @default(cuid())
    dcLink      String
    webLink     String
}

model Streamer {
    id          String   @id @default(cuid())
    name        String
    image       String
    description String
    createdAt   DateTime @default(now())
    updatedAt   DateTime @updatedAt
    dcLink      String
    ytLink      String
    vip         String
}

model Advertisement {
    id        String   @id @default(cuid())
    location  String   @unique
    imagePath String
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

enum Role {
    ADMIN
    USER
}
